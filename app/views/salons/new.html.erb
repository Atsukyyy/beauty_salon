<div class="form">
  <%= form_for(@salon, url: salons_path) do |f| %>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :name, "店舗名", class: "" %>
      <span class="required name-required">※必須</span>
      <%= f.text_field :name, class: "form-control", placeholder: "(例)渋谷ヘアスタジオ", required: true %>
    </div>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :address, "住所", class: "" %>
      <%= f.text_field :address, class: "form-control", placeholder: "", required: true %>
    </div>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :url, "店舗URL", class: "" %>
      <%= f.text_field :url, class: "form-control", placeholder: "", required: true %>
    </div>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :email, "メアド" %>
      <span class="required">※必須</span>
      <%= f.email_field :email, class: "form-control", placeholder: "taro@example.com", required: true %>
    </div>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :password, "パスワード" %>
      <span class="required">※必須</span>
      <%= f.password_field :password, class: "form-control", placeholder: "6文字以上", required: true %>
    </div>

    <div class="form-group col-md-6 offset-3">
      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <span class="required">※必須</span>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "6文字以上", required: true %>
    </div>

    <div class="btn-confirmation col-md-6 offset-3">
      <%= f.submit "登録する", class: "btn btn-block btn-warning", ":disabled" => "!confirmation" %>
    </div>
  <% end %>
</div>
