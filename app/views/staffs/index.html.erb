<div class="staff-index">
  <% @staffs.each do |staff| %>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 20%">名前</th>
          <td style="width: 30%"><%= staff.name %></td>
          <th style="width: 20%">サロン名</th>
          <td style="width: 30%"><%= staff.salon.name %></td>
        </tr>
        <tr>
          <th scope="row">登録日</th>
          <td><%= staff.created_at_to_date %></td>
          <th scope="row">情報更新日</th>
          <td></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
